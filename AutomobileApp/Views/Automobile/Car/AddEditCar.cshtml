@model AutomobileApp.Models.Cars

@{
    ViewData["Title"] = "AddEditCar";
}

<h1>AddEditCar</h1>

<h4>Cars</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveCarData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (@ViewBag.IsEdit)
            {
                <input type="hidden" asp-for="CarId" />
            }
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="@(new SelectList(ViewBag.Company, "CompanyId", "Name",ViewBag.CompanyId))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foundation" class="control-label"></label>
                <input asp-for="Foundation" class="form-control" />
                <span asp-validation-for="Foundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CarList">Back to List</a>
</div>

